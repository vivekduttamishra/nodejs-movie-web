    <h1>Add New Movie</h1>

    <form action="/movie/add" method="post">
        <input type="text" placeholder="Imdb Id" name='imdbID'> <br/>
        <input type="text" placeholder="Movie Title" name='Title'> <br/>
        <input type="text" placeholder="Year" name='Year'> <br/>
        <input type="text" placeholder="Type (Movie/TvShows/Game)" name='Type'> <br/>
        <input type="text" placeholder="Movie Poster" name='Poster'> <br/>
        <input type="text" placeholder="imdb rating" name='imdbRating'> <br/>

        <input type="submit" value='Add' />
    </form>

</body>
